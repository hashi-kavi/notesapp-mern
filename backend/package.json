{
  "name": "notesapp-backend",
  "version": "1.0.0",
  "description": "Secure MERN stack notes application backend",
  "scripts": {
    "start": "node server.js",
    "dev": "node app.js",
    "test": "jest --config=jest.config.js --forceExit --detectOpenHandles",
    "test:verbose": "jest --config=jest.config.js --verbose --forceExit --detectOpenHandles",
    "test:watch": "jest --config=jest.config.js --watch --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles --coverageReporters=text-lcov",
    "sonar": "sonar-scanner"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^10.2.1",
    "sonarqube-scanner": "^2.9.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
